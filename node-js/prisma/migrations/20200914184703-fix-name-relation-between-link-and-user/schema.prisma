datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

// --- MODELS --- //

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  links    Link[]
}

model Link {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  url         String
  postedBy    User?    @relation(fields: [postedById], references: [id])
  postedById  String?
}
